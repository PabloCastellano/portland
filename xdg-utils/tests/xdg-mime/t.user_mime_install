#!/bin/bash

## Include utility functions.
. "$TEST_CODE_DIR/include/testassertions.sh"
. "$TEST_CODE_DIR/include/testdep.sh"
. "$TEST_CODE_DIR/include/testcontrol.sh"

## Test function
test_user_mime_install() {
INPUT_FILE="$TEST_CODE_DIR/xdg-mime/user-mime-install.xml"

## Begin the test.
test_start "$FUNCNAME: install user mime type"
test_purpose "Verify that new mime types get installed into the user space correctly"

# Dependencies section
test_init

set_no_display

test_infoline "TODO: $INPUT_FILE has not been created yet."

#assert_file $INPUT_FILE

# Test steps section
test_procedure

#assert_exit 0 xdg-mime install --user "$INPUT_FILE"
#assert_nostdout
#assert_nostderr

test_result PASS
} 
run_test test_user_mime_install 
