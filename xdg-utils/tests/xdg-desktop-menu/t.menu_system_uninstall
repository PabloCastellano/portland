#!/bin/bash

## Include utility functions.
. "$XDG_TEST_DIR/include/testassertions.sh"

. "$XDG_TEST_DIR/include/testcontrol.sh"

## Test function
test_menu_system_uninstall() {
## Begin the test.
test_start "$FUNCNAME: verify a menu is removed correctly"

# Dependencies section
test_init

set_no_display

USERPATH="$XDG_DATA_DIRS:$XDG_CONFIG_DIRS"

# Generate .desktop file
use_file "$XDG_TEST_DIR/xdg-desktop-menu/data/menu_item_test.desktop" DESKTOP
use_file "$XDG_TEST_DIR/xdg-desktop-menu/data/menu_install.directory" DIRECTORY
use_file "$XDG_TEST_DIR/xdg-desktop-menu/data/menu_install.menu" MENU

edit_file "$MENU" 'menu_install.directory' tmp "$DIRECTORY"
edit_file "$MENU" 'menu_item_test.desktop' tmp "$DESKTOP"

edit_file "$DESKTOP" 'xdg-test-menu-item-install.tmp' CREATEFILE

assert_file "$DESKTOP"
assert_file "$MENU"
assert_file "$DIRECTORY"


# Verify the test icon is not installed already.
assert_file_not_in_path "$DESKTOP" "$USERPATH"
assert_file_not_in_path "$DIRECTORY" "$USERPATH"
assert_file_not_in_path "$MENU" "$USERPATH"

assert_exit 0 xdg-desktop-menu install --system "$DESKTOP"
assert_file_in_path "$DESKTOP" "$USERPATH"

assert_exit 0 xdg-desktop-menu install --system "$DIRECTORY"
assert_file_in_path "$DIRECTORY" "$USERPATH"

assert_exit 0 xdg-desktop-menu install --system "$MENU"
assert_file_in_path "$MENU" "$USERPATH"

assert_interactive "Is the menu item 'Applications/XDG UTILS TEST/Test Menu Item Install' present?" y

# Test steps section
test_procedure

assert_exit 0 xdg-desktop-menu uninstall --system "$DESKTOP"
assert_nostdout
assert_nostderr
assert_file_not_in_path "$DESKTOP" "$USERPATH"

assert_exit 0 xdg-desktop-menu uninstall --system "$DIRECTORY"
assert_nostdout
assert_nostderr
assert_file_not_in_path "$DIRECTORY" "$USERPATH"

assert_exit 0 xdg-desktop-menu uninstall --system "$MENU"
assert_nostdout
assert_nostderr
assert_file_not_in_path "$MENU" "$USERPATH"

assert_interactive "Is the 'Applications/XDG UTILS TEST' (or any trace of) menu still present?" n


test_result
} 

run_test test_menu_system_uninstall
