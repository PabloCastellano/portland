#!/bin/bash

## Include utility functions.
. "$XDG_TEST_DIR/include/testassertions.sh"

. "$XDG_TEST_DIR/include/testcontrol.sh"

## Test function
test_simple_menu_item_user_install() {
## Begin the test.
test_start "$FUNCNAME: verify a desktop file is installed in the applicatiosn menu"

# Dependencies section
test_init

# Generate .desktop file
USERPATH="$HOME/.local"

set_no_display

use_file "$XDG_TEST_DIR/xdg-desktop-menu/data/menu_item_test.desktop" DESKTOP
edit_file "$DESKTOP" 'xdg-test-menu-item-install.tmp' CREATEFILE

assert_file "$DESKTOP"

# Verify the test icon is not installed already.
assert_file_not_in_path "$DESKTOP" "$USERPATH"

# Test steps section
test_procedure

assert_exit 0 xdg-desktop-menu install --user "$DESKTOP"
assert_nostdout
assert_nostderr

assert_file_in_path "$DESKTOP" "$USERPATH"

if [ -z "$XDG_TEST_NO_INTERACTIVE" ]; then
assert_interactive_notroot "Is the menu item 'Applications/Applications/Test Menu Item Install' present?" y
assert_interactive_notroot "Please select the menu item 'Applications/Applications/Test Menu Item Install'"

## Double clicking will result in the command 'touch xdg-test-menu-item-install.tmp' to be run
assert_file "$HOME/$CREATEFILE"
rm -f "$HOME/$CREATEFILE"
fi

## Cleanup
xdg-desktop-menu uninstall --user "$DESKTOP"

test_result
} 

run_test test_simple_menu_item_user_install
