#!/bin/bash

## Include utility functions.
. "$XDG_TEST_DIR/include/testassertions.sh"
. "$XDG_TEST_DIR/include/testdep.sh"
. "$XDG_TEST_DIR/include/testcontrol.sh"

## Test function
test_icon_svg_duplicate_install() {
ICON="red-SVG.svg"

test_start "$FUNCNAME: verify $ICON is installed correctly when it has already been installed."

## Begin the test.
userpath="$HOME/.icons:$HOME/.local:$XDG_DATA_HOME"

# Dependencies section
test_init

set_no_display
use_file "$XDG_TEST_DIR/icons/$ICON" ICON_FILE
assert_file "$ICON_FILE"

# Verify the test icon is not installed already.
assert_exit 0 xdg-icon-resource install --user "$ICON_FILE"
assert_file_in_path "$ICON_FILE" "$userpath"

# Test steps section
test_procedure

assert_exit 0 xdg-icon-resource install --user "$ICON_FILE"
assert_nostdout
assert_nostderr

assert_file_in_path "$ICON_FILE" "$userpath"

assert_exit 0 xdg-icon-resource uninstall --user "$ICON_FILE"

test_result
} 

run_test test_icon_svg_duplicate_install 
