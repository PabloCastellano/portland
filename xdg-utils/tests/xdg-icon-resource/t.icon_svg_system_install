#!/bin/bash

## Include utility functions.
. "$XDG_TEST_DIR/include/testassertions.sh"
. "$XDG_TEST_DIR/include/testdep.sh"
. "$XDG_TEST_DIR/include/testcontrol.sh"

## Test function
test_icon_svg_system_install() {
ICON="red-SVG.svg"

test_start "$FUNCNAME: verify $ICON is installed correctly with --system"

## Begin the test.
icondir="$XDG_TEST_DIR/icons"
systempath="$HOME/.icons:$HOME/.local:$XDG_DATA_HOME"
systempath="$XDG_DATA_DIRS:/usr/share/pixmaps"

# Dependencies section
test_init

assert_exit 0 test `whoami` = root 

set_no_display
assert_file "$icondir/$ICON"

# Verify the test icon is not installed already.
assert_file_not_in_path "$ICON" "$systempath"

# Test steps section
test_procedure

assert_exit 0 xdg-icon-resource install --system "$icondir/$ICON"
assert_nostdout
assert_nostderr

assert_file_in_path "$ICON" "$systempath"

assert_exit 0 xdg-icon-resource uninstall --system "$icondir/$ICON"

test_result
} 

run_test test_icon_svg_system_install 
