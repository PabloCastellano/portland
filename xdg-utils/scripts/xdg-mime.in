usage()
{
cat << _USAGE
_USAGE
}

#@xdg-utils-common@

info_kde()
{
    kfile "$1" 2> /dev/null | cut -d "(" -f 2 | cut -d ")" -f 1

    exit_success
}

info_gnome()
{
    gnomevfs-info "$1" 2> /dev/null | grep MIME | cut -d ":" -f 2 | sed s/"^ "//

    exit_success
}

info_generic()
{
    /usr/bin/file -i "$1" 2> /dev/null | cut -d ":" -f 2 | sed s/"^ "//

    exit_success
}

defapp_kde()
{
    MIME=`kfile "$1" 2> /dev/null | cut -d "(" -f 2 | cut -d ")" -f 1`

    if [ x"$MIME" != x"" ]; then
        ktradertest "$MIME" Application 2>/dev/null | grep DesktopEntryPath \
            | head -n 1 | cut -d ':' -f 2 | cut -d \' -f 2 | xargs basename
        exit_success
    else
        exit_failure_operation_failed
    fi
}

defapp_gnome()
{
    gnomevfs-info "$1" 2> /dev/null | grep "Default app" | cut -d ":" -f 2 \
        | cut -d " " -f 2

    exit_success
}

[ x"$1" != x"" ] || exit_failure_arg_count


if [ x"$1" = x"--help" ]; then
    usage
    exit_success
elif [ x"$1" = x"--info" ]; then
    shift
    [ x"$1" != x"" ] || exit_failure_arg_count

    if [ x"$DE" = x"" ]; then
        if [ -x /usr/bin/file ]; then
            DE=generic
        fi
    fi

    case "$DE" in
        kde)
        info_kde "$1"
        ;;

        gnome)
        info_gnome "$1"
        ;;

        generic)
        info_generic "$1"
        ;;

        *)
        exit_failure_operation_impossible "Sorry, no method available for quering MIME type of" "$1"
        ;;
    esac
elif [ x"$1" = x"--defapp" ]; then
    shift
    [ x"$1" != x"" ] || exit_failure_arg_count

    case "$DE" in
        kde)
        defapp_kde "$1"
        ;;

        gnome)
        defapp_gnome "$1"
        ;;

        *)
        exit_failure_operation_impossible "Sorry, no method available for quering default application for file" "$1"
        ;;
    esac
else
    exit_failure_arg_malformed "Unkown command" "$1"
fi
