usage()
{
cat << _USAGE
_USAGE
    exit 1
}

su_kde()
{
    kdesu "$*"

    exit $?
}

su_gnome()
{
    gnomesu -c "$*"

    exit $?
}

su_generic()
{
    XSU=`which xsu 2>/dev/null`
    if [ $? -eq 0 ] ; then
        $XSU "$*"

        exit $?
    else
        echo Sorry, no method available for invoking su "$*"
        exit 2
    fi
}

[ "$1" != "" ] || usage
[ "$1" != "--help" ] || usage
[ "${1:0:1}" != "-" ] || usage

#@xdg-utils-common@

case "$DE" in
    kde)
    su_kde "$*"
    ;;

    gnome)
    su_gnome "$*"
    ;;

    *)
    su_generic "$*"
    ;;
esac
