#!/bin/sh
#---------------------------------------------
#   xdg-su
#
#   Utility script to run a command as an alternate user, generally
#       the root user, with a graphical prompt for the root
#       password if needed
#
#   Refer to the usage() function below for usage.
#
#   Copyright 2006, Jeremy White <jwhite@codeweavers.com>
#   Copyright 2006, Kevin Krammer <kevin.krammer@gmx.at>
#
#   LICENSE:
#
#---------------------------------------------

usage()
{
cat << _USAGE
_USAGE
}

#@xdg-utils-common@

su_kde()
{
    kdesu "$@"

    if [ $? -eq 0 ]; then
        exit_success
    else
        exit_failure_operation_failed
    fi
}

su_gnome()
{
    GSU=`which gnomesu 2>/dev/null`
    if [ $? -eq 0 ] ; then
        $GSU "$@"

        if [ $? -eq 0 ]; then
            exit_success
        else
            exit_failure_operation_failed
        fi
    else
        su_generic "$@"
    fi
}

su_generic()
{
    XSU=`which xsu 2>/dev/null`
    if [ $? -eq 0 ] ; then
        $XSU "$@"

        if [ $? -eq 0 ]; then
            exit_success
        else
            exit_failure_operation_failed
        fi
    else
        exit_failure_operation_impossible "Sorry, no graphical method available for invoking su" "$@"
    fi
}

[ x"$1" != x"" ] || exit_failure_arg_count

if [ x"$DE" = x"" ]; then
    XSU=`which xsu 2>/dev/null`
    if [ $? -eq 0 ] ; then
        DE=generic
    fi
fi

case "$DE" in
    kde)
    su_kde "$@"
    ;;

    gnome)
    su_gnome "$@"
    ;;

    generic)
    su_generic "$@"
    ;;

    *)
    exit_failure_operation_impossible "Sorry, no graphical method available for invoking su" "$@"
    ;;
esac
