#!/bin/sh
#---------------------------------------------
#   xdg-su
#
#   Utility script to run a command as an alternate user, generally
#       the root user, with a graphical prompt for the root
#       password if needed
#
#   Refer to the usage() function below for usage.
#
#   Copyright 2006, Jeremy White <jwhite@codeweavers.com>
#   Copyright 2006, Kevin Krammer <kevin.krammer@gmx.at>
#
#   LICENSE:
#
#---------------------------------------------

usage()
{
cat << _USAGE
_USAGE
    exit 1
}

su_kde()
{
    kdesu "$@"

    exit $?
}

su_gnome()
{
    GSU=`which gnomesu 2>/dev/null`
    if [ $? -eq 0 ] ; then
        $GSU "$@"

        exit $?
    else
        su_generic "$@"
    fi
}

su_generic()
{
    XSU=`which xsu 2>/dev/null`
    if [ $? -eq 0 ] ; then
        $XSU "$@"

        exit $?
    else
        echo Sorry, no graphical method available for invoking su "$*"
        exit 2
    fi
}

[ x"$1" != x"" ] || usage
[ x"$1" != x"--help" ] || usage

#@xdg-utils-common@

if [ x"$DE" = x"" ]; then
    XSU=`which xsu 2>/dev/null`
    if [ $? -eq 0 ] ; then
        DE=generic
    fi
fi

case "$DE" in
    kde)
    su_kde "$@"
    ;;

    gnome)
    su_gnome "$@"
    ;;

    *)
    su_generic "$@"
    ;;
esac
