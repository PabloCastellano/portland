usage()
{
cat << _USAGE
_USAGE
    exit 1
}

copy_kde()
{
    kfmclient copy "$1" "$2"

    exit $?
}

copy_gnome()
{
    gnomevfs-copy "$1" "$2"

    exit $?
}

[ x"$1" != x"" ] || usage
[ x"$2" != x"" ] || usage
[ x"$1" != x"--help" ] || usage

#@xdg-utils-common@

case "$DE" in
    kde)
    copy_kde "$1" "$2"
    ;;

    gnome)
    copy_gnome "$1" "$2"
    ;;

    *)
    echo Sorry, no method available for copying "$1" to "$2"
    exit 2
    ;;
esac
