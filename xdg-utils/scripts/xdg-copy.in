usage()
{
    APP=`basename $0`
    echo "Copies a file from a source URL/path to a destination URL/path"
    echo "Usage:"
    echo $APP "source destination"
    echo
    echo $APP "http://portland.freedesktop.org/png/freedesktop-logo.png" .
    echo $APP "/tmp/foobar.png" "/home/user/foobar-copy.png"
    exit 1
}

copy_kde()
{
    kfmclient copy "$1" "$2"

    exit $?
}

copy_gnome()
{
    gnomevfs-copy "$1" "$2"

    exit $?
}

[ "$1" != "" ] || usage
[ "$2" != "" ] || usage

#@xdg-utils-common@

case "$DE" in
    kde)
    copy_kde "$1" "$2"
    ;;

    gnome)
    copy_gnome "$1" "$2"
    ;;

    *)
    echo Sorry, no method available for copying "$1" to "$2"
    exit 2
    ;;
esac
